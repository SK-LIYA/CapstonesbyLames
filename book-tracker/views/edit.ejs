<nav style="background: linear-gradient(90deg, #6a11cb, #2575fc); padding: 1.2rem 2rem; display: flex; justify-content: space-between; align-items: center; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); color: white; font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;">
    <h1 style="margin: 0; font-size: 24px; font-weight: bold; letter-spacing: 1px;">ðŸ“š Book Tracker</h1>
    <div class="nav-links" style="display: flex; gap: 1.5rem;">
        <a href="/" class="home" style="text-decoration: none; color: white; font-weight: 600; transition: opacity 0.3s;">Home</a>
        <a href="/add" class="add" style="text-decoration: none; color: #2575fc; background-color: white; padding: 0.6rem 1.2rem; border-radius: 6px; font-weight: 600; transition: all 0.3s ease;">Add Book</a>
    </div>
</nav>

<div class="container" style="max-width: 700px; margin: 40px auto; padding: 30px; border-radius: 12px; background-color: #f4f7fb; box-shadow: 0 6px 15px rgba(0, 0, 0, 0.1); font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;">
    <div class="form-card" style="padding: 20px; background-color: white; border-radius: 8px; box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);">
        <h2 style="text-align: center; color: #2c3e50; font-size: 1.8rem; margin-bottom: 30px; font-weight: 600;">Edit Book</h2>
        <form action="/edit/<%= book.id %>" method="POST" style="display: flex; flex-direction: column; gap: 20px;">
            <label style="font-weight: 600; color: #34495e; font-size: 1.1rem;">
                Title:
                <input type="text" name="title" value="<%= book.title %>" required style="padding: 12px 15px; border: 1px solid #ccc; border-radius: 8px; font-size: 1rem; color: #333; background-color: #fff; transition: border 0.3s ease; outline: none;">
            </label>

            <label style="font-weight: 600; color: #34495e; font-size: 1.1rem;">
                Author:
                <input type="text" name="author" value="<%= book.author %>" required style="padding: 12px 15px; border: 1px solid #ccc; border-radius: 8px; font-size: 1rem; color: #333; background-color: #fff; transition: border 0.3s ease; outline: none;">
            </label>

            <label style="font-weight: 600; color: #34495e; font-size: 1.1rem;">
                Rating (1-5):
                <select name="rating" required style="padding: 12px 15px; border: 1px solid #ccc; border-radius: 8px; font-size: 1rem; color: #333; background-color: #fff; transition: border 0.3s ease; outline: none;">
                    <% for(let i = 1; i <= 5; i++) { %>
                        <option value="<%= i %>" <%= book.rating === i ? 'selected' : '' %>><%= i %></option>
                    <% } %>
                </select>
            </label>

            <label style="font-weight: 600; color: #34495e; font-size: 1.1rem;">
                Review:
                <textarea name="review" style="padding: 12px 15px; border: 1px solid #ccc; border-radius: 8px; font-size: 1rem; color: #333; background-color: #fff; transition: border 0.3s ease; outline: none;"><%= book.review %></textarea>
            </label>

            <label style="font-weight: 600; color: #34495e; font-size: 1.1rem;">
                Date Read:
                <input type="date" name="date_read" value="<%= new Date(book.date_read).toISOString().split('T')[0] %>" required style="padding: 12px 15px; border: 1px solid #ccc; border-radius: 8px; font-size: 1rem; color: #333; background-color: #fff; transition: border 0.3s ease; outline: none;">
            </label>

            <label style="font-weight: 600; color: #34495e; font-size: 1.1rem;">
                ISBN (optional):
                <input type="text" name="isbn" value="<%= book.isbn %>" style="padding: 12px 15px; border: 1px solid #ccc; border-radius: 8px; font-size: 1rem; color: #333; background-color: #fff; transition: border 0.3s ease; outline: none;">
            </label>

            <button type="submit" style="padding: 12px 20px; background-color: #27ae60; color: white; font-weight: bold; border: none; border-radius: 8px; cursor: pointer; font-size: 1.1rem; transition: background-color 0.3s ease; text-transform: uppercase;">Update Book</button>
        </form>
    </div>
</div>
