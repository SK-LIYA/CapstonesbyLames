    color: #333;
    min-height: 100vh;
    padding-bottom: 40px;
">

    <!-- Navigation Bar -->
    <nav style="background: linear-gradient(90deg, #6a11cb, #2575fc); padding: 20px 30px; display: flex; align-items: center; justify-content: space-between; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); border-bottom: 2px solid #ddd;">
        <h1 style="margin: 0; color: white; font-size: 28px; letter-spacing: 1px; font-weight: 600;">ðŸ“š Book Tracker</h1>
        <div>
            <a href="/" style="color: white; margin-left: 20px; text-decoration: none; font-weight: bold; transition: color 0.3s; font-size: 1rem;">Home</a>
            <a href="/add" style="
                background-color: white;
                color: #2575fc;
                padding: 8px 16px;
                border-radius: 6px;
